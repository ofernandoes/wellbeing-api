{
    "name": "Flutter Development (Stable Universal)",
    // Use the universal image as the base
    "image": "mcr.microsoft.com/devcontainers/universal:latest",

    // Add the stable Flutter Feature (without a version number)
    "features": { 
        "ghcr.io/devcontainers/features/flutter:latest": {}
    },

    // Tells VS Code to install the necessary extensions (Dart/Flutter)
    "customizations": {
        "vscode": {
            "extensions": [
                "Dart-Code.flutter"
            ]
        }
    },

    // Runs 'flutter doctor' as a final check after setup
    "postCreateCommand": "flutter doctor",

    // Forwards the default web port for running your app in the browser
    "forwardPorts": [8080]
}
